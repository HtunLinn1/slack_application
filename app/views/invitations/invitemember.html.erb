<% provide(:title, 'Invite Member') %>
<%= render 'user/header' %>
<div>
<%= render 'user/menu' %>
</div>
<h1>メンバーを招待</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:invitations, url: invitations_path) do |f| %>
      <%= f.label :メールアドレス %>
      <%= f.email_field :email1, class: 'form-control' %>
      <%= f.email_field :email2, class: 'form-control' %>
      <%= f.email_field :email3, class: 'form-control' %>

      <%= f.submit "招待", class: "btn btn-lg btn-primary" %>
    <% end %>
  </div>
</div>